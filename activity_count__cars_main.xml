<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Count_Cars_main"
    android:background="@android:color/background_dark"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        tools:ignore="MissingConstraints,UselessParent">

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            tools:ignore="ScrollViewSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_row="0"
                android:layout_column="0"
                >
                <TextView
                    android:id="@+id/car_name"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:textColor="@android:color/holo_blue_bright"
                    android:textStyle="bold"
                    android:enabled="false"
                    android:textSize="18sp"
                    android:gravity="center|left"
                    tools:ignore="Autofill,RtlHardcoded,TextFields" />

                <TextView
                    android:id="@+id/count_car"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:enabled="false"
                    android:textColor="@android:color/holo_blue_bright"
                    android:gravity="center"
                    tools:ignore="Autofill,LabelFor,RtlHardcoded,TextFields" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center"
                android:layout_row="1"
                android:layout_column="0"

                >
                <ImageButton
                    android:id="@+id/passenger_car"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="30dp"
                    android:background="@mipmap/passenger_car_96px"
                    tools:ignore="ContentDescription,RtlHardcoded" />


                <ImageButton
                    android:id="@+id/busses"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="30dp"
                    android:background="@mipmap/bus_96px"
                    tools:ignore="ContentDescription,RtlHardcoded" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center"
                android:layout_row="2"
                android:layout_column="0"
                >

                <ImageButton
                    android:id="@+id/lgv"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="60dp"
                    android:background="@mipmap/container_truck_96px"
                    tools:ignore="ContentDescription"
                    android:layout_marginEnd="60dp" />
                <ImageButton
                    android:id="@+id/hgv"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@mipmap/trailer_unloading_96px"
                    tools:ignore="ContentDescription,RtlHardcoded" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center"
                android:layout_row="3"
                android:layout_column="0"
                >

                <ImageButton
                    android:id="@+id/bicycle"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="30dp"
                    android:background="@mipmap/cycling_96"
                    tools:ignore="ContentDescription,RtlHardcoded" />

                <ImageButton
                    android:id="@+id/motorcycle"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="30dp"
                    android:background="@mipmap/motorcycle_96px"
                    tools:ignore="ContentDescription,RtlHardcoded" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center"
                android:layout_row="4"
                android:layout_column="0">
                <ImageButton
                    android:id="@+id/cara"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="30dp"
                    android:background="@mipmap/horse_96px"
                    tools:ignore="ContentDescription,RtlHardcoded" />

                <ImageButton
                    android:id="@+id/tuktuk"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="30dp"
                    android:background="@mipmap/tuktuk"
                    android:textAlignment="gravity"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center"
                android:layout_row="5"
                android:layout_column="0">
                <Button
                    android:id="@+id/stop_count_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_red_light"
                    android:text="@string/stop_btn"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="ButtonStyle" />
              <ImageButton
                   android:id="@+id/export_excel_btn"
                   android:layout_width="@android:dimen/app_icon_size"
                   android:layout_height="@android:dimen/app_icon_size"
                   android:background="@mipmap/excel_48"
                   tools:ignore="ContentDescription" />
            </LinearLayout>


        </GridLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>